{
  "gpu_num" : 1,

  "roberta_model": "roberta-large",
  "hidden_layer": 1024,
  "dropout": 0.3,
  "with_mention_width": true,
  "with_head_attention": true,
  "embedding_dimension": 20,

  "max_mention_span": 8,
  "use_gold_mentions": true,
  "mention_type": "events",
  "top_k": 0.4,
  "training_method": "e2e",

  "random_seed": 0,
  "epochs": 10,
  "batch_size": 16,
  "learning_rate": 1e-4,
  "weight_decay": 0,
  "loss": "bce",
  "optimizer": "adam",

  "log_path": "logs/pairwise_scorer",
  "data_folder": "data/ecb/mentions",
  "span_repr_path": "models/event_span_repr_0",
  "span_scorer_path": "models/event_span_scorer_0",
  "model_path": "models/gold_mentions/event"
}