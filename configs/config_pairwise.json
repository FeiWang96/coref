{
  "gpu_num" : 1,

  "roberta_model": "roberta-large",
  "hidden_layer": 1024,
  "dropout": 0.3,
  "with_mention_width": true,
  "with_head_attention": true,
  "embedding_dimension": 20,

  "random_seed": 0,
  "max_mention_span": 8,
  "use_gold_mentions": false,
  "is_event": true,
  "top_k": 0.25,

  "epochs": 10,
  "batch_size": 16,
  "learning_rate": 1e-4,
  "weight_decay": 0,
  "loss": "bce",
  "optimizer": "adam",

  "span_repr_path": "models/event_span_repr_0",
  "span_scorer_path": "models/event_span_scorer_0",

  "save_path": "pairwise_experiments/full_subtopic",
  "model_path": "models/full_subtopic",
  "exp_num": 2
}